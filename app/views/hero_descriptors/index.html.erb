<h1>Listing hero_descriptors</h1>

<table>
  <thead>
    <tr>
      <th>Heroid</th>
      <th>Name</th>
      <th>Lvl</th>
      <th>Mood</th>
      <th>Map</th>
      <th>Pack max size</th>
      <th>Exp</th>
      <th>Exp to next lvl</th>
      <th>X</th>
      <th>Y</th>
      <th>Class</th>
      <th>Race</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @hero_descriptors.each do |hero_descriptor| %>
      <tr>
        <td><%= hero_descriptor.heroid %></td>
        <td><%= hero_descriptor.name %></td>
        <td><%= hero_descriptor.lvl %></td>
        <td><%= hero_descriptor.mood %></td>
        <td><%= hero_descriptor.map %></td>
        <td><%= hero_descriptor.pack_max_size %></td>
        <td><%= hero_descriptor.exp %></td>
        <td><%= hero_descriptor.exp_to_next_lvl %></td>
        <td><%= hero_descriptor.x %></td>
        <td><%= hero_descriptor.y %></td>
        <td><%= hero_descriptor.class %></td>
        <td><%= hero_descriptor.race %></td>
        <td><%= link_to 'Show', hero_descriptor %></td>
        <td><%= link_to 'Edit', edit_hero_descriptor_path(hero_descriptor) %></td>
        <td><%= link_to 'Destroy', hero_descriptor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

